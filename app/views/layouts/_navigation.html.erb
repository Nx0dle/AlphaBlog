<section id="search-sec">
  <label>
    <input type="text" placeholder="Search...">
  </label>
</section>

<section id="header">
  <%= link_to 'Alpha', root_path, class: "navbar-brand" %>

  <div>
    <ul id="navbar">
      <% if logged_in? %>
        <li><%= link_to 'Create Article', new_article_path %></li>
      <% end %>
      <li><%= link_to 'Show All Articles', articles_path %></li>
      <li><%= link_to 'Bloggers', users_path %></li>
      <% if logged_in? %>
        <li><%= link_to current_user.username, user_path(current_user) %></li>
        <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Log In', login_path %></li>
      <% end %>
      <li><a><span class="material-symbols-outlined">search</span></a></li>
    </ul>
  </div>
</section>