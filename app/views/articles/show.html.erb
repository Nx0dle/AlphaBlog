<section id="article-show">
  <div class="section-p1">
    <h4><%= @article.title %></h4>
    <p><%= @article.description %></p>
  </div>
  <div class="article-action">
    <a><%= link_to 'Go to articles listing', articles_path, class: "btn-normal" %></a>
    <a><%= link_to 'Edit', edit_article_path(@article), class: "btn-side" %></a>
    <a><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-side-warning" %></a>
  </div>
</section>